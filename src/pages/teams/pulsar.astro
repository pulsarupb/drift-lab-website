---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const team = {
  name: "Pulsar",
  tagline: "Roaming the Red Planet",
  description: "Pulsar is dedicated to designing and building autonomous rovers capable of navigating the harsh terrains of Mars. Our interdisciplinary team combines mechanical engineering, electronics, and AI.",
  accent: "var(--color-accent-pulsar)"
};
---

<Layout title={`${team.name} - AMRE Lab`}>
  <Header />
  <main>
    <section class="team-hero" style={`--team-accent: ${team.accent}`}>
      <div class="container">
        <span class="team-badge">Planetary Rovers</span>
        <h1>{team.name}</h1>
        <p class="tagline">{team.tagline}</p>
      </div>
      <div class="hero-bg"></div>
    </section>

    <section class="team-details container">
      <div class="content-grid">
        <div class="main-info">
          <h2>Mission Overview</h2>
          <p>{team.description}</p>
          <p>We participate in the University Rover Challenge (URC) and the European Rover Challenge (ERC). Our latest prototype, Ares V, features a 6-wheel rocker-bogie suspension and a 5-DOF robotic arm.</p>
        </div>
        <div class="stats">
            <div class="stat-card">
                <span class="stat-value">5</span>
                <span class="stat-label">Generations</span>
            </div>
            <div class="stat-card">
                <span class="stat-value">35</span>
                <span class="stat-label">Members</span>
            </div>
            <div class="stat-card">
                <span class="stat-value">1st</span>
                <span class="stat-label">Place (National)</span>
            </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .team-hero {
    min-height: 60vh;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: 80px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 70% 30%, var(--team-accent), transparent 70%);
    opacity: 0.15;
    z-index: -1;
  }

  .team-badge {
    color: var(--team-accent);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    display: block;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    line-height: 1;
  }

  .tagline {
    font-size: 1.5rem;
    color: var(--color-text-muted);
    max-width: 600px;
  }

  .team-details {
    padding: 4rem 1rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
  }

  h2 {
    color: var(--team-accent);
    margin-bottom: 1.5rem;
  }

  p {
    line-height: 1.7;
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
  }

  .stats {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .stat-card {
    background: var(--color-surface);
    padding: 1.5rem;
    border-radius: var(--radius-md);
    border: 1px solid rgba(255, 255, 255, 0.05);
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text-main);
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .content-grid {
        grid-template-columns: 1fr;
    }
    h1 {
        font-size: 3rem;
    }
  }
</style>
