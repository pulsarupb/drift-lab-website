---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us">
  <Header />
  <main class="contact-page">
    <div class="container">
      <div class="contact-content">
        <h1>Get in Touch</h1>
        <p class="subtitle">Interested in autonomous vehicles research or joining one of our teams?</p>
        
        <div class="contact-info">
          <div class="info-item">
            <h3>Location</h3>
            <p>CAMPUS Research Institute<br/>Room 515<br/>Politehnica University of Bucharest</p>
          </div>
          
          <div class="info-item">
            <h3>Team Contacts</h3>
            <div class="contact-person">
              <strong>Andrei Iatagan</strong>
            </div>
            <div class="contact-person">
              <strong>Cosmin Rusu</strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .contact-page {
    padding-top: 120px;
    padding-bottom: 4rem;
    min-height: 80vh;
  }

  .contact-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(to right, #fff, var(--color-text-muted));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
  }

  .contact-info {
    background: var(--color-surface);
    padding: 2.5rem;
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .info-item {
    margin-bottom: 2rem;
  }

  .info-item:last-child {
    margin-bottom: 0;
  }

  .info-item h3 {
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  .info-item p {
    line-height: 1.6;
    color: var(--color-text-muted);
  }

  .contact-person {
    margin-bottom: 0.5rem;
    color: var(--color-text-muted);
  }

  .contact-person strong {
    color: var(--color-text-main);
  }
</style>
