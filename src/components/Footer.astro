---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-main">
      <div class="footer-brand">
        <h3>Drift Lab</h3>
        <p>Autonomous Vehicles Research at CAMPUS Institute</p>
      </div>
      <div class="footer-social">
        <!-- Add social placeholders or keep links minimal -->
      </div>
      <div class="footer-nav">
        <a href="/" class="footer-link">Home</a>
        <a href="/#teams" class="footer-link">Teams</a>
        <a href="/contact" class="footer-link">Contact</a>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Drift Lab. <span class="dim">Created with love by Drift Lab members</span></p>
      <div class="footer-logos">
        <span class="logo-text">Politehnica Bucure»ôti</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #050508;
    padding: clamp(3rem, 8vw, 6rem) 0 clamp(2rem, 4vw, 3rem);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--color-text-dim);
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 3rem;
  }

  .footer-brand h3 {
    color: var(--color-text-main);
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.01em;
  }
  
  .footer-brand p {
    font-size: clamp(0.875rem, 2vw, 0.95rem);
    color: var(--color-text-muted);
  }

  .footer-nav {
    display: flex;
    gap: 2rem;
  }

  .footer-link {
    color: var(--color-text-muted);
    transition: color 0.2s;
    font-size: 0.95rem;
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.03);
    font-size: 0.85rem;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .dim {
    color: var(--color-text-dim);
    opacity: 0.4;
  }
  
  .logo-text {
    opacity: 0.6;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .footer-main {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 2rem;
    }

    .footer-nav {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 600px) {
    .footer-main, .footer-bottom {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    
    .footer-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .footer-bottom {
      font-size: clamp(0.75rem, 2vw, 0.85rem);
    }
  }
</style>
