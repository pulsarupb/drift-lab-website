---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-main">
      <div class="footer-brand">
        <h3>Drift Lab</h3>
        <p>Autonomous Vehicles Research</p>
      </div>
      <div class="footer-links">
        <a href="/contact">Contact</a>
        <a href="https://upb.ro" target="_blank" rel="noopener noreferrer">Politehnica București</a>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Drift Lab. All rights reserved.</p>
      <p class="attribution">CAMPUS Research Institute • Politehnica București • Room 515</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #000;
    padding: 4rem 0 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--color-text-muted);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer-brand h3 {
    color: var(--color-text-main);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .footer-links {
    display: flex;
    gap: 2rem;
  }

  .footer-links a {
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.9rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .attribution {
    opacity: 0.8;
  }
  
  @media (max-width: 600px) {
    .footer-main, .footer-bottom {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
  }
</style>
