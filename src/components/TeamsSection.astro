---
const teams = [
  {
    id: "pulsar",
    name: "PULSAR Team",
    focus: "European Rover Challenge",
    description:
      "Student team designing and building autonomous planetary rovers for the European Rover Challenge.",
    color: "var(--color-accent-pulsar)",
  },
  {
    id: "bosch",
    name: "Bosch Future Mobility",
    focus: "BFMC Competition",
    description:
      "Competing in the Bosch Future Mobility Challenge with autonomous driving solutions.",
    color: "var(--color-accent-bosch)",
  },
  {
    id: "nxp",
    name: "NXP Cup",
    focus: "NXP Cup Competition",
    description:
      "Developing high-speed autonomous racing vehicles for the NXP Cup competition.",
    color: "var(--color-accent-nxp)",
  },
]
---

<section id="teams" class="teams-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Our Teams</h2>
      <p class="section-desc">
        Three specialized teams pushing the boundaries of autonomous vehicle
        technology.
      </p>
    </div>

    <div class="teams-grid">
      {
        teams.map((team) => (
          <div class="team-card">
            <div class="card-accent" style={`--accent: ${team.color}`} />
            <div class="card-content">
              <h3 class="team-name">{team.name}</h3>
              <span
                class="team-focus"
                style={`color: ${team.color}; border-color: ${team.color}40; background: ${team.color}10`}
              >
                {team.focus}
              </span>
              <p class="team-desc">{team.description}</p>
            </div>
            <div class="card-arrow" style={`--accent: ${team.color}`}>
              <svg
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M5 12H19M19 12L12 5M19 12L12 19"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .teams-section {
    padding: clamp(5rem, 12vw, 10rem) 0;
    position: relative;
    background: radial-gradient(
      circle at 50% 0%,
      rgba(255, 255, 255, 0.03) 0%,
      transparent 50%
    );
  }

  .section-header {
    text-align: center;
    margin-bottom: clamp(3rem, 6vw, 5rem);
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: clamp(1rem, 2vw, 1.5rem);
    letter-spacing: -0.02em;
    background: linear-gradient(to right, #fff, #9ca3af);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .section-desc {
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
    font-size: clamp(1rem, 2vw, 1.1rem);
    line-height: 1.6;
    padding: 0 1rem;
  }

  .teams-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 280px), 1fr));
    gap: clamp(1.5rem, 4vw, 2.5rem);
    perspective: 1000px;
  }

  .team-card {
    position: relative;
    background: rgba(255, 255, 255, 0.02);
    border-radius: var(--radius-lg);
    padding: clamp(2rem, 4vw, 3rem) clamp(1.5rem, 3vw, 2.5rem);
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: clamp(280px, 40vh, 320px);
  }

  .team-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      800px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(255, 255, 255, 0.06),
      transparent 40%
    );
    opacity: 0;
    transition: opacity 0.5s;
    z-index: 0;
    pointer-events: none;
  }

  .team-card:hover::before {
    opacity: 1;
  }

  .team-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 20px 50px -10px rgba(0, 0, 0, 0.5);
  }

  .card-accent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent), transparent);
    opacity: 0.7;
    transition: all 0.3s;
  }

  .team-card:hover .card-accent {
    height: 4px;
    opacity: 1;
    box-shadow: 0 0 20px var(--accent);
  }

  .card-content {
    position: relative;
    z-index: 1;
  }

  .team-name {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: 0.75rem;
    font-weight: 700;
    line-height: 1.1;
    color: #fff;
    min-height: clamp(3.5rem, 6vw, 4.4rem);
    display: flex;
    align-items: flex-end;
  }

  .team-focus {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    margin-bottom: 2rem;
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 100px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    white-space: nowrap;
  }

  .team-desc {
    color: var(--color-text-muted);
    line-height: 1.7;
    font-size: clamp(0.95rem, 2vw, 1.05rem);
    margin-bottom: 2rem;
  }

  .card-arrow {
    align-self: flex-end;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: all 0.3s;
    background: rgba(255, 255, 255, 0.02);
  }

  .card-arrow svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
    transition: transform 0.3s;
  }

  .team-card:hover .card-arrow {
    background: var(--accent);
    border-color: var(--accent);
    color: #000;
    transform: rotate(-45deg);
  }

  @media (max-width: 640px) {
    .teams-grid {
      grid-template-columns: 1fr;
    }

    .team-card {
      min-height: auto;
    }
  }
</style>
