---
const teams = [
  {
    id: "pulsar",
    name: "Pulsar",
    focus: "Planetary Rovers",
    description: "Developing autonomous rovers for extreme planetary environments.",
    color: "var(--color-accent-pulsar)",
    href: "/teams/pulsar"
  },
  {
    id: "team1",
    name: "Team1",
    focus: "Autonomous Racing",
    description: "Engineering high-performance electric racing vehicles.",
    color: "var(--color-accent-cars)",
    href: "/teams/team1"
  },
  {
    id: "team2",
    name: "Team2",
    focus: "Aerial Drones",
    description: "Next-generation aerial robotics for surveillance and rescue.",
    color: "var(--color-accent-drones)",
    href: "/teams/team2"
  }
];
---

<section id="teams" class="teams-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Our Research Teams</h2>
      <p class="section-desc">Three specialized divisions pushing the envelope of robotics.</p>
    </div>

    <div class="teams-grid">
      {teams.map((team) => (
        <a href={team.href} class="team-card">
          <div class="card-bg" style={`--accent: ${team.color}`}></div>
          <div class="card-content">
            <h3 class="team-name">{team.name}</h3>
            <span class="team-focus" style={`color: ${team.color}`}>{team.focus}</span>
            <p class="team-desc">{team.description}</p>
            <span class="learn-more">Explore Team &rarr;</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .teams-section {
    padding: 8rem 0;
    position: relative;
    background: linear-gradient(to bottom, var(--color-bg), #0f1014);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .section-desc {
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .teams-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .team-card {
    position: relative;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    overflow: hidden;
    height: 100%;
    display: flex;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .card-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at top right, var(--accent), transparent 60%);
    opacity: 0.05;
    transition: opacity 0.3s;
  }

  .team-card:hover .card-bg {
    opacity: 0.1;
  }

  .card-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .team-name {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .team-focus {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .team-desc {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .learn-more {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-text-main);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.2s;
  }

  .team-card:hover .learn-more {
    gap: 0.8rem;
    color: var(--color-primary);
  }
</style>
