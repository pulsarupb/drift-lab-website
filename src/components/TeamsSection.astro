---
const teams = [
  {
    id: "pulsar",
    name: "PULSAR",
    focus: "Autonomous Vehicles",
    description: "Student team developing cutting-edge autonomous vehicle systems for research and competition.",
    color: "var(--color-accent-pulsar)"
  },
  {
    id: "bosch",
    name: "Anonim Bosch Future Mobility",
    focus: "BFMC Competition",
    description: "Competing in the Bosch Future Mobility Challenge with autonomous driving solutions.",
    color: "var(--color-accent-bosch)"
  },
  {
    id: "nxp",
    name: "Anonim NXP Cup",
    focus: "NXP Cup Competition",
    description: "Developing high-speed autonomous racing vehicles for the NXP Cup competition.",
    color: "var(--color-accent-nxp)"
  }
];
---

<section id="teams" class="teams-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Our Teams</h2>
      <p class="section-desc">Three specialized teams pushing the boundaries of autonomous vehicle technology.</p>
    </div>

    <div class="teams-grid">
      {teams.map((team) => (
        <div class="team-card">
          <div class="card-accent" style={`--accent: ${team.color}`}></div>
          <div class="card-content">
            <h3 class="team-name">{team.name}</h3>
            <span class="team-focus" style={`color: ${team.color}`}>{team.focus}</span>
            <p class="team-desc">{team.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .teams-section {
    padding: 8rem 0;
    position: relative;
    background: linear-gradient(to bottom, var(--color-bg), #0f1014);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .section-desc {
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .teams-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .team-card {
    position: relative;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .card-accent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--accent);
  }

  .card-content {
    position: relative;
    z-index: 1;
  }

  .team-name {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .team-focus {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    margin-bottom: 1.5rem;
    display: block;
  }

  .team-desc {
    color: var(--color-text-muted);
    line-height: 1.6;
    font-size: 0.95rem;
  }
</style>
