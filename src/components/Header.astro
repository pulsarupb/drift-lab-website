---
<header class="header">
  <div class="container header-content">
    <a href="/" class="logo">
      <img src="/drift-logo.png" alt="Drift Lab" class="logo-img" />
      <span class="logo-text">Drift <span class="highlight">Lab</span></span>
    </a>

    <nav class="nav">
      <ul class="nav-list">
        <li><a href="/" class="nav-link">Home</a></li>
        <li><a href="/contact" class="nav-link">Contact</a></li>
      </ul>
    </nav>

    <button class="mobile-menu-toggle" aria-label="Toggle Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>
<script>
    const toggle = document.querySelector('.mobile-menu-toggle');
    const nav = document.querySelector('.nav');

    toggle?.addEventListener('click', () => {
        nav?.classList.toggle('active');
        toggle.classList.toggle('active');
    });
</script>

<style>
  .header {
    background: rgba(5, 5, 5, 0.8);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    padding: 1rem 0;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-main);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo-img {
    height: 36px;
    width: auto;
  }

  .logo-text {
    display: flex;
    gap: 0.25rem;
  }

  .highlight {
    color: var(--color-primary);
  }

  .nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-link {
    font-weight: 500;
    transition: color 0.2s;
    background: none;
    border: none;
    padding: 0;
    font-size: 1rem;
    color: var(--color-text-main);
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  /* Mobile */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    flex-direction: column;
    gap: 4px;
    padding: 4px;
  }
  
  .mobile-menu-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background-color: var(--color-text-main);
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .mobile-menu-toggle {
      display: flex;
    }

    .nav {
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      background: var(--color-bg);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      padding: 1rem 0;
      clip-path: polygon(0 0, 100% 0, 100% 0, 0 0); /* Hidden */
      transition: 0.3s ease-in-out;
    }

    .nav.active {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
    }

    .nav-list {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
